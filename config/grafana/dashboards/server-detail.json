{
  "uid": "msp-server-detail",
  "title": "서버별 상세 현황",
  "description": "개별 서버의 OS 레벨 메트릭 상세",
  "tags": ["msp", "server", "detail"],
  "timezone": "browser",
  "editable": false,
  "graphTooltip": 1,
  "refresh": "15s",
  "schemaVersion": 39,
  "time": { "from": "now-3h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {}
      },
      {
        "name": "customer",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(node_uname_info, customer_id)",
        "refresh": 2,
        "sort": 1,
        "multi": false,
        "includeAll": false
      },
      {
        "name": "server",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(node_uname_info{customer_id=\"$customer\"}, server_name)",
        "refresh": 2,
        "sort": 1,
        "multi": false,
        "includeAll": false
      }
    ]
  },
  "panels": [
    {
      "title": "서버 요약",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "collapsed": false
    },
    {
      "id": 1,
      "title": "Uptime",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "fieldConfig": { "defaults": { "unit": "dtdurations", "color": { "mode": "thresholds" }, "thresholds": { "steps": [{ "color": "green", "value": null }] } } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "targets": [{ "expr": "node_uptime_seconds{customer_id=\"$customer\", server_name=\"$server\"}", "refId": "A" }]
    },
    {
      "id": 2,
      "title": "CPU 사용률",
      "type": "gauge",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 60 }, { "color": "red", "value": 80 }] } } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [{ "expr": "(1 - avg by (customer_id, server_name) (\n  rate(node_cpu_seconds_total{customer_id=\"$customer\", server_name=\"$server\", mode=\"idle\"}[5m])\n)) * 100", "refId": "A" }]
    },
    {
      "id": 3,
      "title": "메모리 사용률",
      "type": "gauge",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 70 }, { "color": "red", "value": 85 }] } } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [{ "expr": "(1 - node_memory_MemAvailable_bytes{customer_id=\"$customer\", server_name=\"$server\"}\n   / node_memory_MemTotal_bytes{customer_id=\"$customer\", server_name=\"$server\"}\n) * 100", "refId": "A" }]
    },
    {
      "id": 4,
      "title": "디스크 사용률 (/)",
      "type": "gauge",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100, "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 70 }, { "color": "red", "value": 90 }] } } },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [{ "expr": "(1 - node_filesystem_avail_bytes{customer_id=\"$customer\", server_name=\"$server\", mountpoint=\"/\"}\n   / node_filesystem_size_bytes{customer_id=\"$customer\", server_name=\"$server\", mountpoint=\"/\"}\n) * 100", "refId": "A" }]
    },
    {
      "title": "CPU 상세",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "collapsed": false
    },
    {
      "id": 5,
      "title": "CPU 사용률 추이",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 6 },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100, "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 }, "color": { "fixedColor": "blue", "mode": "fixed" } } },
      "targets": [{ "expr": "(1 - avg by (customer_id, server_name) (\n  rate(node_cpu_seconds_total{customer_id=\"$customer\", server_name=\"$server\", mode=\"idle\"}[5m])\n)) * 100", "legendFormat": "CPU", "refId": "A" }]
    },
    {
      "id": 6,
      "title": "Load Average",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 6 },
      "fieldConfig": { "defaults": { "unit": "short", "custom": { "drawStyle": "line", "lineWidth": 2 }, "color": { "mode": "palette-classic" } } },
      "targets": [
        { "expr": "node_load1{customer_id=\"$customer\", server_name=\"$server\"}", "legendFormat": "1분", "refId": "A" },
        { "expr": "node_load5{customer_id=\"$customer\", server_name=\"$server\"}", "legendFormat": "5분", "refId": "B" }
      ]
    },
    {
      "title": "메모리 상세",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102,
      "collapsed": false
    },
    {
      "id": 7,
      "title": "메모리 사용률 추이",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 15 },
      "fieldConfig": { "defaults": { "unit": "percent", "min": 0, "max": 100, "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 }, "color": { "fixedColor": "purple", "mode": "fixed" } } },
      "targets": [{ "expr": "(1 - node_memory_MemAvailable_bytes{customer_id=\"$customer\", server_name=\"$server\"}\n   / node_memory_MemTotal_bytes{customer_id=\"$customer\", server_name=\"$server\"}\n) * 100", "legendFormat": "메모리", "refId": "A" }]
    },
    {
      "id": 8,
      "title": "메모리 구성 (Total / Available)",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 15 },
      "fieldConfig": { "defaults": { "unit": "bytes", "custom": { "drawStyle": "line", "lineWidth": 2 }, "color": { "mode": "palette-classic" } } },
      "targets": [
        { "expr": "node_memory_MemTotal_bytes{customer_id=\"$customer\", server_name=\"$server\"}", "legendFormat": "전체", "refId": "A" },
        { "expr": "node_memory_MemAvailable_bytes{customer_id=\"$customer\", server_name=\"$server\"}", "legendFormat": "가용", "refId": "B" }
      ]
    },
    {
      "title": "네트워크",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 103,
      "collapsed": false
    },
    {
      "id": 9,
      "title": "네트워크 트래픽",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 24 },
      "fieldConfig": {
        "defaults": { "unit": "Bps", "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 15 }, "color": { "mode": "palette-classic" } }
      },
      "options": { "tooltip": { "mode": "multi" }, "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max"] } },
      "targets": [
        { "expr": "rate(node_network_receive_bytes_total{customer_id=\"$customer\", server_name=\"$server\", device!=\"lo\"}[5m])", "legendFormat": "수신 ({{device}})", "refId": "A" },
        { "expr": "rate(node_network_transmit_bytes_total{customer_id=\"$customer\", server_name=\"$server\", device!=\"lo\"}[5m])", "legendFormat": "송신 ({{device}})", "refId": "B" }
      ]
    }
  ]
}
