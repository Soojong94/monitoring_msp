{
  "uid": "msp-customer-detail",
  "title": "고객별 상세 현황",
  "description": "개별 고객의 서버 리소스 사용률 상세",
  "tags": ["msp", "customer", "detail"],
  "timezone": "browser",
  "editable": false,
  "graphTooltip": 1,
  "refresh": "30s",
  "schemaVersion": 39,
  "time": { "from": "now-6h", "to": "now" },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "options": [],
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false
      },
      {
        "name": "customer",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(node_uname_info, customer_id)",
        "definition": "label_values(node_uname_info, customer_id)",
        "current": {},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "options": [],
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1
      },
      {
        "name": "server",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(node_uname_info{customer_id=\"$customer\"}, server_name)",
        "definition": "label_values(node_uname_info{customer_id=\"$customer\"}, server_name)",
        "current": {},
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "options": [],
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1
      },
      {
        "name": "csp",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(node_uname_info{customer_id=\"$customer\"}, csp)",
        "definition": "label_values(node_uname_info{customer_id=\"$customer\"}, csp)",
        "current": {},
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "options": [],
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1
      },
      {
        "name": "region",
        "type": "query",
        "datasource": { "type": "prometheus", "uid": "${datasource}" },
        "query": "label_values(node_uname_info{customer_id=\"$customer\", csp=~\"$csp\"}, region)",
        "definition": "label_values(node_uname_info{customer_id=\"$customer\", csp=~\"$csp\"}, region)",
        "current": {},
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "options": [],
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1
      }
    ]
  },
  "panels": [
    {
      "title": "고객 요약",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 0 },
      "id": 100,
      "collapsed": false
    },
    {
      "id": 1,
      "title": "서버 수",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "blue", "value": null }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "none" },
      "targets": [{ "expr": "count(node_uname_info{customer_id=\"$customer\", server_name=~\"$server\"})", "refId": "A" }]
    },
    {
      "id": 2,
      "title": "평균 CPU",
      "type": "gauge",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "min": 0, "max": 100,
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 60 }, { "color": "red", "value": 80 }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [{ "expr": "avg(\n  clamp_min(\n    (1 - avg by (customer_id, server_name) (\n      rate(node_cpu_seconds_total{customer_id=\"$customer\", server_name=~\"$server\", mode=\"idle\"}[5m])\n    )) * 100\n  , 0)\n)", "refId": "A" }]
    },
    {
      "id": 3,
      "title": "평균 메모리",
      "type": "gauge",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "min": 0, "max": 100,
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 70 }, { "color": "red", "value": 85 }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] } },
      "targets": [{ "expr": "avg(\n  (1 - node_memory_MemAvailable_bytes{customer_id=\"$customer\", server_name=~\"$server\"}\n     / node_memory_MemTotal_bytes{customer_id=\"$customer\", server_name=~\"$server\"}\n  ) * 100\n)", "refId": "A" }]
    },
    {
      "id": 4,
      "title": "월 비용 (USD)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 1 },
      "fieldConfig": {
        "defaults": {
          "unit": "currencyUSD", "decimals": 0,
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 1000 }, { "color": "red", "value": 3000 }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "value", "graphMode": "area" },
      "targets": [{ "expr": "sum(msp_csp_cost_monthly_total{customer_id=\"$customer\"})", "refId": "A" }]
    },
    {
      "title": "CPU 사용률",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 5 },
      "id": 101,
      "collapsed": false
    },
    {
      "id": 5,
      "title": "서버별 CPU 사용률 추이",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "min": 0, "max": 100,
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10, "pointSize": 5, "showPoints": "never" },
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max", "lastNotNull"] }
      },
      "targets": [{
        "expr": "clamp_min(\n  (1 - avg by (customer_id, server_name) (\n    rate(node_cpu_seconds_total{customer_id=\"$customer\", server_name=~\"$server\", mode=\"idle\"}[5m])\n  )) * 100\n, 0)",
        "legendFormat": "{{server_name}}",
        "refId": "A"
      }]
    },
    {
      "title": "메모리 사용률",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 14 },
      "id": 102,
      "collapsed": false
    },
    {
      "id": 6,
      "title": "서버별 메모리 사용률 추이",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 15 },
      "fieldConfig": {
        "defaults": {
          "unit": "percent", "min": 0, "max": 100,
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 10 },
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "right", "calcs": ["mean", "max", "lastNotNull"] }
      },
      "targets": [{
        "expr": "(1 - node_memory_MemAvailable_bytes{customer_id=\"$customer\", server_name=~\"$server\"}\n   / node_memory_MemTotal_bytes{customer_id=\"$customer\", server_name=~\"$server\"}\n) * 100",
        "legendFormat": "{{server_name}}",
        "refId": "A"
      }]
    },
    {
      "title": "네트워크 트래픽",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 23 },
      "id": 103,
      "collapsed": false
    },
    {
      "id": 30,
      "title": "현재 총 수신 (Inbound)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 0, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 50000000 }, { "color": "red", "value": 500000000 }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "area" },
      "targets": [{ "expr": "sum(rate(node_network_receive_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m]))", "refId": "A" }]
    },
    {
      "id": 31,
      "title": "현재 총 송신 (Outbound)",
      "type": "stat",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 6, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "color": { "mode": "thresholds" },
          "thresholds": { "steps": [{ "color": "green", "value": null }, { "color": "yellow", "value": 50000000 }, { "color": "red", "value": 500000000 }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "colorMode": "background", "graphMode": "area" },
      "targets": [{ "expr": "sum(rate(node_network_transmit_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m]))", "refId": "A" }]
    },
    {
      "id": 32,
      "title": "Top 5 수신 서버",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 12, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps", "min": 0,
          "color": { "mode": "palette-classic" },
          "thresholds": { "steps": [{ "color": "green", "value": null }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "horizontal", "displayMode": "gradient", "showUnfilled": true },
      "targets": [{ "expr": "topk(5, sum by (server_name) (rate(node_network_receive_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m])))", "legendFormat": "{{server_name}}", "refId": "A" }]
    },
    {
      "id": 33,
      "title": "Top 5 송신 서버",
      "type": "bargauge",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 4, "w": 6, "x": 18, "y": 24 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps", "min": 0,
          "color": { "mode": "palette-classic" },
          "thresholds": { "steps": [{ "color": "orange", "value": null }] }
        }
      },
      "options": { "reduceOptions": { "calcs": ["lastNotNull"] }, "orientation": "horizontal", "displayMode": "gradient", "showUnfilled": true },
      "targets": [{ "expr": "topk(5, sum by (server_name) (rate(node_network_transmit_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m])))", "legendFormat": "{{server_name}}", "refId": "A" }]
    },
    {
      "id": 7,
      "title": "서버별 수신 트래픽 추이",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 },
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [{
        "expr": "sum by (server_name) (rate(node_network_receive_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m]))",
        "legendFormat": "▼ {{server_name}}",
        "refId": "A"
      }]
    },
    {
      "id": 8,
      "title": "서버별 송신 트래픽 추이",
      "type": "timeseries",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 28 },
      "fieldConfig": {
        "defaults": {
          "unit": "Bps",
          "custom": { "drawStyle": "line", "lineWidth": 2, "fillOpacity": 20 },
          "color": { "mode": "palette-classic" }
        }
      },
      "options": {
        "tooltip": { "mode": "multi", "sort": "desc" },
        "legend": { "displayMode": "table", "placement": "bottom", "calcs": ["mean", "max"] }
      },
      "targets": [{
        "expr": "sum by (server_name) (rate(node_network_transmit_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m]))",
        "legendFormat": "▲ {{server_name}}",
        "refId": "A"
      }]
    },
    {
      "title": "서버 요약 테이블",
      "type": "row",
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 36 },
      "id": 104,
      "collapsed": false
    },
    {
      "id": 9,
      "title": "서버별 리소스 요약",
      "type": "table",
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 37 },
      "fieldConfig": {
        "defaults": { "decimals": 1 },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "CPU (%)" },
            "properties": [
              { "id": "unit", "value": "percent" },
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 60}, {"color": "red", "value": 80}] } },
              { "id": "custom.displayMode", "value": "color-background-solid" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "메모리 (%)" },
            "properties": [
              { "id": "unit", "value": "percent" },
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 70}, {"color": "red", "value": 85}] } },
              { "id": "custom.displayMode", "value": "color-background-solid" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "디스크 (%)" },
            "properties": [
              { "id": "unit", "value": "percent" },
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 70}, {"color": "red", "value": 90}] } },
              { "id": "custom.displayMode", "value": "color-background-solid" }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "수신 (Bps)" },
            "properties": [
              { "id": "unit", "value": "Bps" },
              { "id": "custom.displayMode", "value": "color-text" },
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "yellow", "value": 10000000}] } }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "송신 (Bps)" },
            "properties": [
              { "id": "unit", "value": "Bps" },
              { "id": "custom.displayMode", "value": "color-text" },
              { "id": "thresholds", "value": { "mode": "absolute", "steps": [{"color": "green", "value": null}, {"color": "orange", "value": 10000000}] } }
            ]
          }
        ]
      },
      "options": { "showHeader": true, "sortBy": [{ "displayName": "CPU (%)", "desc": true }] },
      "transformations": [{ "id": "merge", "options": {} }],
      "targets": [
        { "expr": "clamp_min((1 - avg by (server_name) (rate(node_cpu_seconds_total{customer_id=\"$customer\", server_name=~\"$server\", mode=\"idle\"}[5m]))) * 100, 0)", "legendFormat": "CPU (%)", "refId": "A", "format": "table", "instant": true },
        { "expr": "(1 - node_memory_MemAvailable_bytes{customer_id=\"$customer\", server_name=~\"$server\"} / node_memory_MemTotal_bytes{customer_id=\"$customer\", server_name=~\"$server\"}) * 100", "legendFormat": "메모리 (%)", "refId": "B", "format": "table", "instant": true },
        { "expr": "(1 - node_filesystem_avail_bytes{customer_id=\"$customer\", server_name=~\"$server\", mountpoint=\"/\"} / node_filesystem_size_bytes{customer_id=\"$customer\", server_name=~\"$server\", mountpoint=\"/\"}) * 100", "legendFormat": "디스크 (%)", "refId": "C", "format": "table", "instant": true },
        { "expr": "sum by (server_name) (rate(node_network_receive_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m]))", "legendFormat": "수신 (Bps)", "refId": "D", "format": "table", "instant": true },
        { "expr": "sum by (server_name) (rate(node_network_transmit_bytes_total{customer_id=\"$customer\", server_name=~\"$server\", device!=\"lo\"}[5m]))", "legendFormat": "송신 (Bps)", "refId": "E", "format": "table", "instant": true }
      ]
    }
  ]
}
