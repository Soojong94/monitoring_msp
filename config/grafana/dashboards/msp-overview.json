      "title": "고객별 현황 테이블",
      "type": "row"
    },
    {
      "id": 5,
      "title": "고객별 현황",
      "type": "table",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 6 },
      "datasource": { "type": "prometheus", "uid": "${datasource}" },
      "targets": [
        {
          "expr": "count by (customer_id) (node_uname_info)",
          "refId": "A",
          "legendFormat": "서버 수",
          "instant": true,
          "format": "table"
        },
        {
          "expr": "avg by (customer_id) (\n  (1 - avg by (customer_id, server_name) (\n    rate(node_cpu_seconds_total{mode=\"idle\"}[5m])\n  )) * 100\n)",
          "refId": "B",
          "legendFormat": "평균 CPU (%)",
          "instant": true,
          "format": "table"
        },
        {
          "expr": "avg by (customer_id) (\n  (1 - node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes) * 100\n)",
          "refId": "C",
          "legendFormat": "평균 메모리 (%)",
          "instant": true,
          "format": "table"
        },
        {
          "expr": "sum by (customer_id) (msp_csp_cost_monthly_total)",
          "refId": "D",
          "legendFormat": "월 비용 (USD)",
          "instant": true,
          "format": "table"
        }
      ],
      "transformations": [{ "id": "merge", "options": {} }],
      "fieldConfig": {
        "defaults": {
          "custom": {
            "align": "auto",
            "cellOptions": { "type": "auto" },
            "inspect": false
          }
        },
        "overrides": [
          {
            "matcher": { "id": "byName", "options": "Value #B" },
            "properties": [
              { "id": "displayName", "value": "평균 CPU (%)" },
              { "id": "unit", "value": "percent" },
              { "id": "decimals", "value": 1 },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "yellow", "value": 60 },
                    { "color": "red", "value": 80 }
                  ]
                }
              },
              {
                "id": "custom.cellOptions",
                "value": { "type": "color-background", "mode": "basic" }
              }
            ]
          },
          {
            "matcher": { "id": "byName", "options": "Value #C" },
