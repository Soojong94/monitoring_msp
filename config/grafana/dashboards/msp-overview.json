  "tags": ["msp", "overview"],
  "timezone": "browser",
  "editable": false,
  "schemaVersion": 39,
  "refresh": "1m",
  "time": {
    "from": "now-6h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "datasource",
        "type": "datasource",
        "query": "prometheus",
        "current": {},
        "hide": 0,
        "includeAll": false,
        "multi": false,
        "options": [],
        "refresh": 1,
        "regex": "",
        "skipUrlSync": false
      },
      {
        "name": "customer",
        "type": "query",
        "datasource": {
          "type": "prometheus",
          "uid": "${datasource}"
        },
        "query": "label_values(node_uname_info, customer_id)",
        "current": {},
        "hide": 0,
        "includeAll": true,
        "multi": true,
        "allValue": ".*",
        "options": [],
        "refresh": 2,
        "regex": "",
        "skipUrlSync": false,
        "sort": 1
      }
    ]
  },
