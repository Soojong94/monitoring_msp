              { "id": "displayName", "value": "평균 메모리 (%)" },
              { "id": "unit", "value": "percent" },
              { "id": "decimals", "value": 1 },
              {
                "id": "thresholds",
                "value": {
                  "mode": "absolute",
                  "steps": [
                    { "color": "green", "value": null },
                    { "color": "yellow", "value": 70 },
                    { "color": "red", "value": 85 }
